if [[ "$PROFILE" == "1" ]]; then
  zmodload zsh/zprof
  zmodload zsh/datetime

  t0=$EPOCHREALTIME
fi

export PATH=/usr/local/opt/ccache/libexec:~/devtools/arcanist/bin:~/buck/bin:/opt/facebook/bin:/usr/local/bin:/usr/local/sbin:/opt/facebook/bin:./node_modules/.bin:$PATH

export KEYTIMEOUT=1

autoload -U zutil      # [1]
autoload -U compinit   # [2]
autoload -U complist   # [3]

# either git or brew is slow here... ~500ms
#plugins=(git brew history-substring-search)

plugins=(history-substring-search)

# Set ZSH so oh-my-zsh finds its installation
ZSH=~/.oh-my-zsh

# !! slow 450ms :(
source $ZSH/oh-my-zsh.sh

source ~/.my_zsh_theme.sh

# Customize to your needs...

alias sz='source ~/.zshrc'
alias ez='vim ~/.zshrc'
