eval `opam config env`

# FZF
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# OCaml
alias ocaml="ledit ocaml"

export LC_ALL="en_US.UTF-8"

if [[ "$PROFILE" == "1" ]]; then
  function {
      t1=$EPOCHREALTIME
      startup=$(( t1 - t0 ))
      print "Shell startup time: $startup"
  }
  unset t0
fi
